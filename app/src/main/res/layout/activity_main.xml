<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deduce.deduceit.MainActivity"
    android:background="#000000">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="50sp"
            android:text="DEDUCE X"
            android:textStyle="bold"
            android:textColor="#f9f8f8"
            android:layout_gravity="center_horizontal"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/hvsh1"
            android:scaleType="center"
            android:textSize="20sp"
            android:src="@mipmap/image_play"
            android:background="#000000" />
        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="37dp"
            android:paddingRight="37dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text=""
            android:id="@+id/hvsh"
            android:textSize="20sp"
            android:background="#000000"
            android:textColor="#f5f0f0"/-->



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="invisible"
            android:minWidth="40dp"
            android:textColor="@color/white"
            android:id="@+id/inputText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO !"
            android:id="@+id/go_button"
            android:background="#ff272e"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_gravity="right|center_vertical" />
        <FrameLayout
            android:layout_width="167dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">


            <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fab_one"
            android:padding="0dp"
            android:src="@drawable/home_settings"
            android:scaleType="fitStart"
            android:layout_gravity="left|top"
            android:layout_centerHorizontal="true" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fab_two"
                android:textSize="20sp"
                android:layout_gravity="right|top"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fab_question"
                android:layout_marginBottom="144dp"
                />
        </FrameLayout>


    </FrameLayout>

</LinearLayout>
